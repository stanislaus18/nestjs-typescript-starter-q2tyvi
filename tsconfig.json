{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@sysConfig/config": [
        "libs/config/src"
      ],
      "@sysConfig/config/*": [
        "libs/config/src/*"
      ],
      "@DB/influx": [
        "libs/influx/src"
      ],
      "@DB/influx/*": [
        "libs/influx/src/*"
      ],
      "@socket/socket-connection": [
        "libs/socket-connection/src"
      ],
      "@socket/socket-connection/*": [
        "libs/socket-connection/src/*"
      ]
    }
  }
}